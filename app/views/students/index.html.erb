<div class="container mt-4">
  <h1 class="text-center">Student</h1>
  
  <div class="card border-secondary mb-3">
    <div class="card-header">Student</div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Subject</th>
            <th>Mark</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td>
                <div class="name-icon">
                  <span class="initials"><%= student.name[0].upcase %></span>
                  <span class="name-text"><%= student.name %></span>
                </div>
              </td>
              <td><%= student.subject %></td>
              <td><%= student.mark %></td>
              <td>
                <div class="dropdown">
                  <button class="action-button" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <span>â–¼</span>
                  </button>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Edit', edit_students_path(student), class: 'dropdown-item' %></li>
                    <li><%= link_to 'Delete', students_path(id: student.id),  data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      } , class: 'dropdown-item' %></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= link_to 'Add', new_students_path, class: 'add-button' %>
      </div>
    </div>
  </div>
</div>
