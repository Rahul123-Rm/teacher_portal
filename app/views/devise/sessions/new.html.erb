<h2>tailwebs.</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
  <div class="form-group">
    <%= f.label :email, "Username" %>
    <div class="input-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your Username" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Password" %>
    <div class="input-field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "********" %>
    </div>
  </div>

  <div class="form-group links">
    <%= link_to "Forgot Password?", new_password_path(resource_name), class: "forgot-password-link" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up-link" %>
  </div>

  <div class="form-group">
    <%= f.submit "Login", class: "btn-login" %>
  </div>
<% end %>

<style>
  .form-group.links {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .forgot-password-link, .sign-up-link {
    margin-right: 10px; /* Adjust spacing as needed */
  }
</style>
