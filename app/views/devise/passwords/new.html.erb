<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'forgot-password-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, "Email Address" %>
    <div class="input-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your Email Address" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Send me reset password instructions", class: "btn-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

